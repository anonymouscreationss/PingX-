# Replit configuration for Expo React Native project
run = "npm start"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run build:web"]
deploymentTarget = "static"
publicDir = "dist"

[env]
EXPO_NO_TELEMETRY = "1"
NODE_ENV = "development"
EXPO_USE_METRO_WORKSPACE_ROOT = "1"

[[ports]]
localPort = 8081
externalPort = 80
exposeLocalhost = true

[[ports]]
localPort = 19000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 19001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 19002
externalPort = 3002
exposeLocalhost = true